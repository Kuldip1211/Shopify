{% layout none %}

<style>
  /* üåø Garden-Themed Register Page */
  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #e6f4ea, #f3fff7);
    font-family: 'Poppins', sans-serif;
    padding: 20px;
  }

  .register-card {
    background: #ffffff;
    padding: 40px 35px;
    border-radius: 18px;
    box-shadow: 0 8px 24px rgba(94, 173, 115, 0.15);
    width: 100%;
    max-width: 450px;
    border: 2px solid #d9f3e0;
  }

  .register-card h2 {
    text-align: center;
    color: #26734d;
    margin-bottom: 8px;
    font-size: 26px;
    font-weight: 700;
  }

  .register-card p {
    text-align: center;
    color: #5f6f64;
    margin-bottom: 25px;
    font-size: 15px;
  }

  .form-group {
    margin-bottom: 18px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    color: #2f3e34;
    font-weight: 500;
    font-size: 14px;
  }

  .form-group input {
    width: 100%;
    padding: 12px;
    border-radius: 10px;
    border: 1px solid #bcdcc2;
    background-color: #fafffa;
    transition: all 0.3s ease;
    font-size: 14px;
  }

  .form-group input:focus {
    border-color: #3ca374;
    box-shadow: 0 0 6px rgba(61, 155, 101, 0.2);
    outline: none;
  }

  .register-btn {
    width: 100%;
    padding: 12px;
    background: #3ca374;
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    font-size: 16px;
    transition: background 0.3s, transform 0.2s;
  }

  .register-btn:hover {
    background: #338a62;
    transform: translateY(-2px);
  }

  .account-links {
    text-align: center;
    margin-top: 22px;
    font-size: 14px;
  }

  .account-links a {
    color: #26734d;
    text-decoration: none;
    font-weight: 500;
  }

  .account-links a:hover {
    text-decoration: underline;
  }

  /* üå± Responsive */
  @media (max-width: 480px) {
    .register-card {
      padding: 30px 25px;
      border-radius: 14px;
    }

    .register-card h2 {
      font-size: 22px;
    }
  }
</style>

<div class="container">
  <div class="register-card">
    <h2>Create Account ‚ú®</h2>
    <p>Join the green community today üåø</p>

    {% form 'create_customer' %}
      {% if form.errors %}
        <div style="color: red; margin-bottom: 10px;">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" name="customer[first_name]" id="FirstName" placeholder="John" required>
      </div>

      <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" name="customer[last_name]" id="LastName" placeholder="Doe" required>
      </div>

      <div class="form-group">
        <label for="Email">Email Address</label>
        <input type="email" name="customer[email]" id="Email" placeholder="you@example.com" required>
      </div>

      <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" name="customer[password]" id="Password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
      </div>

      <button type="submit" class="register-btn">Create Account</button>
    {% endform %}

    <div class="account-links">
      <p>Already have an account? <a href="{{ routes.account_login_url }}">Login</a></p>
      <p><a href="{{ routes.root_url }}">‚Üê Back to Home</a></p>
    </div>
  </div>
</div>
