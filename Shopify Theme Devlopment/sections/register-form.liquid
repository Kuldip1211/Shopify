<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<section class="register-section" style="font-family:'Poppins',sans-serif; padding:80px 0; background:{{ section.settings.bg_color }};">
  <div class="container" style="max-width:500px; margin:0 auto; background:#fff; padding:40px; border-radius:16px; box-shadow:0 8px 20px rgba(0,0,0,0.08);">
    <h2 style="text-align:center; color:{{ section.settings.heading_color }}; margin-bottom:20px;">{{ section.settings.heading_text }}</h2>

    {% form 'create_customer' %}
      {% if form.errors %}
        <div style="color:red; margin-bottom:15px;">{{ form.errors | default_errors }}</div>
      {% endif %}

      <label>First Name</label>
      <input type="text" name="customer[first_name]" required placeholder="Enter first name">

      <label>Last Name</label>
      <input type="text" name="customer[last_name]" required placeholder="Enter last name">

      <label>Email</label>
      <input type="email" name="customer[email]" required placeholder="Enter email">

      <label>Password</label>
      <input type="password" name="customer[password]" required placeholder="Enter password">

      <button type="submit" class="register-btn">Register</button>

      <p style="text-align:center; margin-top:15px;">
        Already have an account? <a href="/account/login">Login</a>
      </p>
    {% endform %}
  </div>
</section>

<style>
.register-section input {
  width: 100%;
  padding: 12px 14px;
  border: 1px solid #ccc;
  border-radius: 8px;
  margin-bottom: 15px;
  font-size: 14px;
}
.register-btn {
  background: #2ecc71;
  color: white;
  padding: 12px;
  border: none;
  border-radius: 8px;
  width: 100%;
  cursor: pointer;
  font-weight: 600;
  transition: 0.3s;
}
.register-btn:hover {
  background: #27ae60;
}
</style>

{% schema %}
{
  "name": "Register Form",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#f9f9f9" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#222222" },
    { "type": "text", "id": "heading_text", "label": "Heading Text", "default": "Create Your Account ðŸª´" }
  ],
  "presets": [{ "name": "Register Form" }]
}
{% endschema %}
