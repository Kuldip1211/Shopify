<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

<section class="customer-register-section" style="font-family:'Poppins', sans-serif; padding:60px 0; background-color:#fafafa;">
  <div class="container" style="max-width:600px; margin:auto; background:#fff; padding:40px; border-radius:12px; box-shadow:0 0 15px rgba(0,0,0,0.05);">

    <h2 style="text-align:center; margin-bottom:25px; font-weight:600;">Create an Account</h2>

    {% form 'create_customer' %}
      {{ form.errors | default_errors }}

      <label>First Name</label>
      <input type="text" name="customer[first_name]" style="width:100%; padding:12px; margin:10px 0; border:1px solid #ddd; border-radius:6px;">

      <label>Last Name</label>
      <input type="text" name="customer[last_name]" style="width:100%; padding:12px; margin:10px 0; border:1px solid #ddd; border-radius:6px;">

      <label>Email</label>
      <input type="email" name="customer[email]" required style="width:100%; padding:12px; margin:10px 0; border:1px solid #ddd; border-radius:6px;">

      <label>Password</label>
      <input type="password" name="customer[password]" required style="width:100%; padding:12px; margin:10px 0; border:1px solid #ddd; border-radius:6px;">

      <button type="submit" style="width:100%; padding:12px; background:#111; color:#fff; border:none; border-radius:6px; margin-top:10px; font-weight:500;">Create Account</button>

      <div style="text-align:center; margin-top:20px;">
        <a href="{{ routes.account_login_url }}" style="color:#007acc;">Already have an account? Login</a>
      </div>
    {% endform %}

  </div>
</section>
