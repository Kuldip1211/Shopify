<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<section class="hero-section" style="
  background-image: url({{ section.settings.hero_image | img_url: '2000x' }});
">
  <div class="overlay" style="background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});"></div>
  
  <div class="hero-content" style="text-align: {{ section.settings.text_alignment }};">
    <h1 class="hero-title" style="color: {{ section.settings.title_color }};">
      {{ section.settings.hero_title }}
    </h1>
    <p class="hero-subtitle" style="color: {{ section.settings.subtitle_color }};">
      {{ section.settings.hero_subtitle }}
    </p>
    {% if section.settings.show_button %}
      <a href="{{ section.settings.button_link }}" class="hero-btn" 
         style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 80vh;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Poppins', sans-serif;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 20px;
  }

  .hero-title {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.3;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    font-weight: 400;
    margin-bottom: 25px;
    line-height: 1.6;
  }

  .hero-btn {
    text-decoration: none;
    font-weight: 600;
    padding: 12px 28px;
    border-radius: 30px;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .hero-btn:hover {
    opacity: 0.85;
    transform: scale(1.03);
  }

  @media (max-width: 768px) {
    .hero-section {
      height: 65vh;
      text-align: center;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay Opacity (0 = none, 1 = full black)",
      "default": 0.4
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Fresh & Organic Fruits Delivered To You"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Shop from our hand-picked selection of the freshest produce grown naturally."
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#f1f1f1"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#2ecc71"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Default Hero Banner"
    }
  ]
}
{% endschema %}
