<section id="Home-page-featured-collection" class="featured-collection">
  <div class="collection-container">
    <!-- Section Title -->
    <div class="collection-header" style="text-align: {{ section.settings.text_alignment }};">
      <h2 class="collection-title" style="color: {{ section.settings.title_color }};">
        {{ section.settings.title }}
      </h2>

      {% if section.settings.show_view_all %}
        <a
          href="{{ section.settings.collection | link_to }}"
          class="view-all-btn"
          style="color: {{ section.settings.button_text_color }}; border-color: {{ section.settings.button_text_color }};"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <!-- Collection Grid -->
    {% if section.settings.collection != blank %}
      {% assign collection = collections[section.settings.collection] %}
      <div class="collection-grid">
        {% for product in collection.products limit: section.settings.products_to_show %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-link">
              <div class="product-image-wrapper">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 500 }}"
                    alt="{{ product.title | escape }}"
                    width="500"
                    height="500"
                    class="product-image"
                    loading="lazy"
                    style="object-fit: cover;"
                  >

                {% else %}
                  <div class="no-image">No Image</div>
                {% endif %}
              </div>
              <div class="product-info">
                <h3 class="product-title">{{ product.title }}</h3>
                <p class="product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="old-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="current-price">{{ product.price | money }}</span>
                </p>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="no-collection-text">Please select a collection in the section settings.</p>
    {% endif %}
  </div>
</section>


{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Featured Collection"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#333333"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of Products to Display",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Color",
      "default": "#2ecc71"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
