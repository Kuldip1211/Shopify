<!-- üìÑ sections/footer-custom.liquid -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<footer class="custom-footer" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; font-family: 'Poppins', sans-serif; padding: 60px 0 30px;">
  <div class="footer-container" style="max-width: 1200px; margin: auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 40px; padding: 0 20px;">

    <!-- üè™ Brand Info -->
    <div class="footer-brand fade-up">
      <h2 style="font-size: 1.6rem; font-weight: 700; color: {{ section.settings.heading_color }};">{{ section.settings.store_name }}</h2>
      <p style="margin-top: 10px; line-height: 1.6;">{{ section.settings.store_description }}</p>
      <p style="margin-top: 15px;"><strong>üìç</strong> {{ section.settings.store_address }}</p>
      <p><strong>üìû</strong> {{ section.settings.store_phone }}</p>
      <p><strong>üìß</strong> {{ section.settings.store_email }}</p>
    </div>

    <!-- üîó Quick Links -->
    <div class="footer-links fade-up">
      <h3 style="font-size: 1.2rem; font-weight: 600; color: {{ section.settings.heading_color }};">Quick Links</h3>
      <ul style="list-style: none; padding: 0; margin-top: 15px;">
        {% for link in linklists.main-menu.links %}
          <li style="margin: 8px 0;">
            <a href="{{ link.url }}" style="text-decoration: none; color: {{ section.settings.text_color }}; transition: 0.3s;">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- üåê Social Media -->
    <div class="footer-social fade-up">
      <h3 style="font-size: 1.2rem; font-weight: 600; color: {{ section.settings.heading_color }};">Follow Us</h3>
      <div class="social-icons" style="display: flex; flex-wrap: wrap; gap: 15px; margin-top: 20px;">
        {% if section.settings.facebook_image != blank %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" class="social-icon" title="Facebook">
            <img src="{{ section.settings.facebook_image | img_url: '64x64' }}" alt="Facebook" style="width: 40px; height: 40px; object-fit: contain;">
          </a>
        {% endif %}
        {% if section.settings.instagram_image != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" class="social-icon" title="Instagram">
            <img src="{{ section.settings.instagram_image | img_url: '64x64' }}" alt="Instagram" style="width: 40px; height: 40px; object-fit: contain;">
          </a>
        {% endif %}
        {% if section.settings.twitter_image != blank %}
          <a href="{{ section.settings.twitter_url }}" target="_blank" class="social-icon" title="Twitter">
            <img src="{{ section.settings.twitter_image | img_url: '64x64' }}" alt="Twitter" style="width: 40px; height: 40px; object-fit: contain;">
          </a>
        {% endif %}
        {% if section.settings.linkedin_image != blank %}
          <a href="{{ section.settings.linkedin_url }}" target="_blank" class="social-icon" title="LinkedIn">
            <img src="{{ section.settings.linkedin_image | img_url: '64x64' }}" alt="LinkedIn" style="width: 40px; height: 40px; object-fit: contain;">
          </a>
        {% endif %}
        {% if section.settings.youtube_image != blank %}
          <a href="{{ section.settings.youtube_url }}" target="_blank" class="social-icon" title="YouTube">
            <img src="{{ section.settings.youtube_image | img_url: '64x64' }}" alt="YouTube" style="width: 40px; height: 40px; object-fit: contain;">
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- üåç Bottom Footer -->
  <div class="footer-bottom" style="text-align: center; margin-top: 50px; font-size: 0.9rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 20px;">
    <p>¬© {{ 'now' | date: '%Y' }} {{ section.settings.store_name }}. All rights reserved. ‚ù§Ô∏è Built with Shopify</p>
  </div>

  <!-- ‚ú® Styles -->
  <style>
    .fade-up {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeUp 1s ease forwards;
    }
    @keyframes fadeUp {
      to { opacity: 1; transform: translateY(0); }
    }

    .footer-links a:hover {
      color: {{ section.settings.accent_color }};
      transform: translateX(5px);
    }

    .social-icon img {
      transition: transform 0.3s ease, filter 0.3s ease;
      filter: grayscale(100%);
    }
    .social-icon:hover img {
      transform: scale(1.1);
      filter: grayscale(0);
    }

    @media (max-width: 768px) {
      .footer-container {
        text-align: center;
      }
      .social-icons {
        justify-content: center;
      }
    }
  </style>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#111111" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#cccccc" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Hover Accent Color", "default": "#4CAF50" },

    { "type": "text", "id": "store_name", "label": "Store Name", "default": "Shiv Gardening" },
    { "type": "textarea", "id": "store_description", "label": "Store Description", "default": "We provide premium quality plants, seeds, and gardening tools to help you create your dream garden." },
    { "type": "text", "id": "store_address", "label": "Store Address", "default": "123 Green Street, Ahmedabad, India" },
    { "type": "text", "id": "store_phone", "label": "Phone Number", "default": "+91 98765 43210" },
    { "type": "text", "id": "store_email", "label": "Email Address", "default": "support@shivgardening.com" },

    { "type": "image_picker", "id": "facebook_image", "label": "Facebook Icon Image" },
    { "type": "url", "id": "facebook_url", "label": "Facebook Link" },
    { "type": "image_picker", "id": "instagram_image", "label": "Instagram Icon Image" },
    { "type": "url", "id": "instagram_url", "label": "Instagram Link" },
    { "type": "image_picker", "id": "twitter_image", "label": "Twitter Icon Image" },
    { "type": "url", "id": "twitter_url", "label": "Twitter Link" },
    { "type": "image_picker", "id": "linkedin_image", "label": "LinkedIn Icon Image" },
    { "type": "url", "id": "linkedin_url", "label": "LinkedIn Link" },
    { "type": "image_picker", "id": "youtube_image", "label": "YouTube Icon Image" },
    { "type": "url", "id": "youtube_url", "label": "YouTube Link" }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
