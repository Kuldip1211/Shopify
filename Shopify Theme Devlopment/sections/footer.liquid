

<footer
  class="shop_page-footer"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; font-family: 'Poppins', sans-serif; padding: 60px 0 30px;"
>
  <div class="shop_page-footer-container">

    <!-- üè™ Brand Info -->
    <div class="shop_page-footer-brand shop_page-fade-up">
      <h2 class="shop_page-footer-heading" style="color: {{ section.settings.heading_color }};">
        {{ section.settings.store_name }}
      </h2>
      <p class="shop_page-footer-text">{{ section.settings.store_description }}</p>
      <p class="shop_page-footer-contact"><strong>üìç</strong> {{ section.settings.store_address }}</p>
      <p class="shop_page-footer-contact"><strong>üìû</strong> {{ section.settings.store_phone }}</p>
      <p class="shop_page-footer-contact"><strong>üìß</strong> {{ section.settings.store_email }}</p>
    </div>

    <!-- üîó Quick Links -->
    <div class="shop_page-footer-links shop_page-fade-up">
      <h3 class="shop_page-footer-subheading" style="color: {{ section.settings.heading_color }};">Quick Links</h3>
      <ul class="shop_page-footer-list">
        {% for link in linklists.main-menu.links %}
          <li>
            <a href="{{ link.url }}" style="color: {{ section.settings.text_color }};">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- üåê Social Media -->
    <div class="shop_page-footer-social shop_page-fade-up">
      <h3 class="shop_page-footer-subheading" style="color: {{ section.settings.heading_color }};">Follow Us</h3>
      <div class="shop_page-social-icons">
        {% if section.settings.facebook_image != blank %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" class="shop_page-social-icon" title="Facebook">
            <img
              src="{{ section.settings.facebook_image | image_url: width: 64, height: 64 }}"
              alt="Facebook Icon"
              width="64"
              height="64"
            >
          </a>
        {% endif %}
        {% if section.settings.instagram_image != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" class="shop_page-social-icon" title="Instagram">
            <img
              src="{{ section.settings.instagram_image | image_url: width: 64, height: 64 }}"
              alt="Instagram Icon"
              width="64"
              height="64"
            >
          </a>
        {% endif %}
        {% if section.settings.twitter_image != blank %}
          <a href="{{ section.settings.twitter_url }}" target="_blank" class="shop_page-social-icon" title="Twitter">
            <img
              src="{{ section.settings.twitter_image | image_url: width: 64, height: 64 }}"
              alt="Twitter Icon"
              width="64"
              height="64"
            >
          </a>
        {% endif %}
        {% if section.settings.linkedin_image != blank %}
          <a href="{{ section.settings.linkedin_url }}" target="_blank" class="shop_page-social-icon" title="LinkedIn">
            <img
              src="{{ section.settings.linkedin_image | image_url: width: 64, height: 64 }}"
              alt="LinkedIn Icon"
              width="64"
              height="64"
            >
          </a>
        {% endif %}
        {% if section.settings.youtube_image != blank %}
          <a href="{{ section.settings.youtube_url }}" target="_blank" class="shop_page-social-icon" title="YouTube">
            <img
              src="{{ section.settings.youtube_image | image_url: width: 64, height: 64 }}"
              alt="YouTube Icon"
              width="64"
              height="64"
            >
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- üåç Bottom Footer -->
  <div class="shop_page-footer-bottom">
    <p>¬© {{ 'now' | date: '%Y' }} {{ section.settings.store_name }}. All rights reserved. ‚ù§Ô∏è Built with Shopify</p>
  </div>
</footer>


{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#111111" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#cccccc" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Hover Accent Color", "default": "#4CAF50" },
    { "type": "text", "id": "store_name", "label": "Store Name", "default": "Shiv Gardening" },
    { "type": "textarea", "id": "store_description", "label": "Store Description", "default": "We provide premium quality plants, seeds, and gardening tools to help you create your dream garden." },
    { "type": "text", "id": "store_address", "label": "Store Address", "default": "123 Green Street, Ahmedabad, India" },
    { "type": "text", "id": "store_phone", "label": "Phone Number", "default": "+91 98765 43210" },
    { "type": "text", "id": "store_email", "label": "Email Address", "default": "support@shivgardening.com" },
    { "type": "image_picker", "id": "facebook_image", "label": "Facebook Icon" },
    { "type": "url", "id": "facebook_url", "label": "Facebook Link" },
    { "type": "image_picker", "id": "instagram_image", "label": "Instagram Icon" },
    { "type": "url", "id": "instagram_url", "label": "Instagram Link" },
    { "type": "image_picker", "id": "twitter_image", "label": "Twitter Icon" },
    { "type": "url", "id": "twitter_url", "label": "Twitter Link" },
    { "type": "image_picker", "id": "linkedin_image", "label": "LinkedIn Icon" },
    { "type": "url", "id": "linkedin_url", "label": "LinkedIn Link" },
    { "type": "image_picker", "id": "youtube_image", "label": "YouTube Icon" },
    { "type": "url", "id": "youtube_url", "label": "YouTube Link" }
  ],
  "presets": [
    { "name": "Custom Footer", "category": "Footer" }
  ]
}
{% endschema %}
