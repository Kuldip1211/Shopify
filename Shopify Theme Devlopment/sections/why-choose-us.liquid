


<section 
  id="Home-page-why_choose_us-section" 
  class="why_choose_us-section" 
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="why_choose_us-container">
    
    <!-- ðŸ·ï¸ Section Header -->
    <div class="why_choose_us-header" style="text-align: {{ section.settings.text_alignment }};">
      <h2 class="why_choose_us-title" style="color: {{ section.settings.title_color }};">{{ section.settings.main_title }}</h2>
      <p class="why_choose_us-subtitle" style="color: {{ section.settings.subtitle_color }};">{{ section.settings.subtitle }}</p>
    </div>

    <!-- ðŸ’Ž Features Grid -->
    <div class="why_choose_us-grid">
      {% for block in section.blocks %}
        <div class="why_choose_us-card">

          <!-- ðŸ–¼ï¸ Image or Icon -->
          {% if block.settings.image != blank %}
            <div class="why_choose_us-image">
              <img 
                src="{{ block.settings.image | image_url: width: 300, height: 300 }}" 
                alt="{{ block.settings.title }}"
                width="300"
                height="300"
                loading="lazy"
              >
            </div>
          {% elsif block.settings.icon != blank %}
            <div class="why_choose_us-icon" style="color: {{ section.settings.icon_color }}; font-size: {{ section.settings.icon_size }}px;">
              <i class="{{ block.settings.icon }}"></i>
            </div>
          {% endif %}

          <!-- ðŸ“ Content -->
          <h3 class="why_choose_us-card-title">{{ block.settings.title }}</h3>
          <p class="why_choose_us-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .why_choose_us-section {
    padding: 80px 20px;
    font-family: 'Poppins', sans-serif;
  }

  .why_choose_us-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .why_choose_us-header {
    margin-bottom: 50px;
  }

  .why_choose_us-title {
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .why_choose_us-subtitle {
    font-size: 1.1rem;
    color: #666;
  }

  .why_choose_us-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    text-align: center;
  }

  .why_choose_us-card {
    background: #fff;
    border-radius: 15px;
    box-shadow: 0 4px 18px rgba(0, 0, 0, 0.08);
    padding: 30px 25px;
    transition: transform 0.3s ease;
  }

  .why_choose_us-card:hover {
    transform: translateY(-6px);
  }

  .why_choose_us-image img {
    max-width: 100%;
    border-radius: 12px;
    margin-bottom: 20px;
  }

  .why_choose_us-icon {
    margin-bottom: 20px;
  }

  .why_choose_us-card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
  }

  .why_choose_us-description {
    font-size: 0.95rem;
    color: #555;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .why_choose_us-title {
      font-size: 1.8rem;
    }
  }
</style>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We provide the best quality, service, and value for your needs."
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#555555"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Default Icon Color",
      "default": "#2ecc71"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size (px)",
      "min": 24,
      "max": 80,
      "step": 2,
      "default": 50
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Feature Icon Image (optional)"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Font Awesome Icon Class (optional)",
          "default": "fa-solid fa-leaf",
          "info": "Example: fa-solid fa-truck, fa-solid fa-star, fa-solid fa-heart"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "High Quality Products"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "We maintain strict quality control and only offer premium items."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us (With Icons or Images)",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "fa-solid fa-leaf",
            "title": "Eco-Friendly Products",
            "description": "We care for nature and offer sustainable products."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "fa-solid fa-truck-fast",
            "title": "Fast Delivery",
            "description": "We ensure quick and reliable delivery for all orders."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "fa-solid fa-headset",
            "title": "24/7 Support",
            "description": "Our support team is always available to assist you."
          }
        }
      ]
    }
  ]
}
{% endschema %}
