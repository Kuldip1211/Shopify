<!-- 📁 sections/announcement-bar.liquid -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<div
  id="Home-page-announcement-section"
  class="announcement-bar"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};"
>
  <div class="scrolling-text-container">
    <div class="scrolling-text">
      <span>{{ section.settings.announcement_text }}</span>
      <span>{{ section.settings.announcement_text }}</span>
      <span>{{ section.settings.announcement_text }}</span>
      <span>{{ section.settings.announcement_text }}</span>
    </div>
  </div>
</div>

<style>
  /* 🌿 AnnouncementBAr Styles */
  #Home-page-announcement-section {
    font-family: 'Poppins', sans-serif;
    text-align: center;
    padding: 10px 0;
    overflow: hidden;
    position: relative;
    white-space: nowrap;
  }

  /* 🌀 Modern Scrolling Text (Marquee Replacement) */
  #Home-page-announcement-section .scrolling-text-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  #Home-page-announcement-section .scrolling-text {
    display: inline-block;
    white-space: nowrap;
    animation: scrollLeft 20s linear infinite;
  }

  #Home-page-announcement-section .scrolling-text span {
    display: inline-block;
    margin-right: 80px;
    font-size: 0.95rem;
    font-weight: 500;
  }

  @keyframes scrollLeft {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* 🛒 Button */
  #Home-page-announcement-section .announcement-btn {
    display: inline-block;
    text-decoration: none;
    padding: 7px 18px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-top: 6px;
    margin-left: 10px;
    transition: all 0.3s ease;
  }

  #Home-page-announcement-section .announcement-btn:hover {
    opacity: 0.85;
    transform: translateY(-1px);
  }

  /* 📱 Responsive */
  @media (max-width: 768px) {
    #Home-page-announcement-section {
      padding: 8px 0;
    }

    #Home-page-announcement-section .scrolling-text span {
      font-size: 0.85rem;
      margin-right: 40px;
    }

    #Home-page-announcement-section .announcement-btn {
      font-size: 0.8rem;
      padding: 6px 14px;
      margin-top: 5px;
    }
  }
</style>

<script>
  // 🧠 Optional JS enhancement for dynamic pause on hover
  document.addEventListener("DOMContentLoaded", () => {
    const scrollText = document.querySelector(
      "#Home-page-announcement-section .scrolling-text"
    );

    if (scrollText) {
      scrollText.addEventListener("mouseover", () => {
        scrollText.style.animationPlayState = "paused";
      });
      scrollText.addEventListener("mouseout", () => {
        scrollText.style.animationPlayState = "running";
      });
    }
  });
</script>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "🎉 Free shipping on orders over ₹500! Shop now and grow happiness 🌿"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#2ecc71"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#2ecc71"
    }
  ],
  "presets": [
    {
      "name": "Default Announcement Bar"
    }
  ]
}
{% endschema %}
