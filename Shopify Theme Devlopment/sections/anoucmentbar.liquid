<!-- 📁 sections/announcement-bar.liquid -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<div
  class="announcement-bar"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};"
>
  <marquee
    behavior="scroll"
    direction="left"
    scrollamount="6"
    onmouseover="this.stop();"
    onmouseout="this.start();"
  >
    <div class="announcement-container">
      <div class="annouc-container">
        <p class="announcement-text">{{ section.settings.announcement_text }}</p>
      </div>
      <div class="annouc-container">
        <p class="announcement-text">{{ section.settings.announcement_text }}</p>
      </div>
      <div class="annouc-container">
        <p class="announcement-text">{{ section.settings.announcement_text }}</p>
      </div>
      <div class="annouc-container">
        <p class="announcement-text">{{ section.settings.announcement_text }}</p>
      </div>
    </div>
  </marquee>
</div>

<style>
  .annouc-container {
    width: 400px;
  }

  .announcement-bar {
    font-family: 'Poppins', sans-serif;
    padding: 10px 0;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .announcement-container {
    margin: 0 auto;
    padding: 0 15px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .announcement-text {
    font-size: 0.95rem;
    font-weight: 500;
    margin: 0;
  }

  .announcement-btn {
    text-decoration: none;
    padding: 7px 16px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    transition: 0.3s ease;
  }

  .announcement-btn:hover {
    opacity: 0.85;
  }

  @media (max-width: 768px) {
    .announcement-container {
      flex-direction: flex;
      text-align: center;
      gap: 8px;
    }

    .announcement-text {
      font-size: 0.9rem;
    }

    .announcement-btn {
      font-size: 0.85rem;
      padding: 6px 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "🎉 Free shipping on orders over ₹500!"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#2ecc71"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#2ecc71"
    }
  ],
  "presets": [
    {
      "name": "Default Announcement Bar"
    }
  ]
}
{% endschema %}
