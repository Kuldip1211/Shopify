<!-- ðŸ“„ sections/newsletter-section.liquid -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<section
  class="newsletter-section"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; padding: 80px 0; text-align: center; font-family: 'Poppins', sans-serif; overflow: hidden; position: relative;"
>
  <div class="container" style="max-width: 800px; margin: 0 auto; padding: 0 20px;">
    <!-- âœ¨ Animated Heading -->
    <h2
      class="newsletter-heading fade-up"
      style="font-size: 2.2rem; font-weight: 700; margin-bottom: 15px; color: {{ section.settings.heading_color }};"
    >
      {{ section.settings.heading }}
    </h2>

    <p
      class="newsletter-text fade-up"
      style="font-size: 1rem; color: {{ section.settings.text_color }}; margin-bottom: 30px;"
    >
      {{ section.settings.subheading }}
    </p>

    <!-- ðŸ“¨ Shopify Built-in Newsletter Form -->
    {% form 'customer', class: 'newsletter-form fade-up' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div style="display: flex; justify-content: center; align-items: center; gap: 10px; flex-wrap: wrap;">
        <input
          type="email"
          name="contact[email]"
          placeholder="{{ section.settings.placeholder_text }}"
          required
          style="padding: 14px 20px; border-radius: 8px; border: 1px solid #ccc; width: 300px; max-width: 100%; font-size: 1rem; outline: none;"
        >
        <!-- âœ… Hidden field for reCAPTCHA token -->
        <input type="hidden" name="g-recaptcha-response" id="recaptchaToken">
        <button
          type="submit"
          style="padding: 14px 25px; border: none; border-radius: 8px; background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}; font-weight: 600; font-size: 1rem; cursor: pointer; transition: all 0.3s;"
        >
          {{ section.settings.button_text }}
        </button>
      </div>
    {% endform %}

    {% if form.posted_successfully? %}
      <p style="margin-top: 20px; color: green; font-weight: 600;">{{ section.settings.success_message }}</p>
    {% elsif form.errors %}
      <p style="margin-top: 20px; color: red;">{{ form.errors | default_errors }}</p>
    {% endif %}
  </div>

  <!-- ðŸŽ¨ Decorative Animated Background Circles -->
  <div class="floating-circle circle1"></div>
  <div class="floating-circle circle2"></div>

  <script src="https://www.google.com/recaptcha/api.js?render=6Lfaw-IrAAAAAM-eVdQR3P90ITMzKwXE3QqbGAZ8"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      grecaptcha.ready(function () {
        // âœ… Executes reCAPTCHA v3 and gets a token for the "newsletter" action
        grecaptcha.execute('6Lfaw-IrAAAAAM-eVdQR3P90ITMzKwXE3QqbGAZ8', { action: 'newsletter' }).then(function (token) {
          document.getElementById('recaptchaToken').value = token;
        });
      });
    });
  </script>

  <style>
    /* âœ¨ Animation Effects */
    .fade-up {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeUp 1s ease forwards;
    }
    .fade-up:nth-child(1) { animation-delay: 0.2s; }
    .fade-up:nth-child(2) { animation-delay: 0.4s; }
    .fade-up:nth-child(3) { animation-delay: 0.6s; }

    @keyframes fadeUp {
      to { opacity: 1; transform: translateY(0); }
    }

    /* ðŸŸ¢ Button Hover */
    .newsletter-section button:hover {
      background-color: {{ section.settings.button_hover_color }};
      transform: scale(1.05);
    }

    /* ðŸŽ¨ Floating Circles */
    .floating-circle {
      position: absolute;
      border-radius: 50%;
      opacity: 0.1;
      animation: float 6s ease-in-out infinite alternate;
    }

    .circle1 {
      width: 150px;
      height: 150px;
      background: {{ section.settings.circle_color }};
      top: 20%;
      left: 10%;
      animation-delay: 0s;
    }

    .circle2 {
      width: 200px;
      height: 200px;
      background: {{ section.settings.circle_color }};
      bottom: 15%;
      right: 15%;
      animation-delay: 1.5s;
    }

    @keyframes float {
      0% { transform: translateY(0); }
      100% { transform: translateY(-20px); }
    }

    @media (max-width: 768px) {
      .newsletter-section input {
        width: 100%;
      }
    }
  </style>
</section>

