  "name": "Newsletter",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay Updated with Our Latest Offers!"
    },
    {
      "type": "textarea",
