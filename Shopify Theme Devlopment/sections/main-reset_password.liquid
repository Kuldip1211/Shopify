{% layout none %}

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #f8f9ff, #eef2ff);
    font-family: 'Poppins', sans-serif;
  }
  .reset-card {
    background: #fff;
    padding: 40px 35px;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 420px;
  }
  .reset-card h2 { text-align: center; color: #0b5cff; margin-bottom: 10px; }
  .reset-card p { text-align: center; color: #666; margin-bottom: 25px; font-size: 14px; }
  .form-group { margin-bottom: 20px; }
  .form-group label { display: block; margin-bottom: 6px; color: #333; font-weight: 500; }
  .form-group input { width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc; transition: all 0.3s ease; }
  .form-group input:focus { border-color: #0b5cff; box-shadow: 0 0 4px rgba(11,92,255,0.3); outline: none; }
  .reset-btn { width: 100%; padding: 12px; background: #0b5cff; color: white; border: none; border-radius: 8px; cursor: pointer; font-weight: 600; font-size: 16px; transition: background 0.3s; }
  .reset-btn:hover { background: #0048d6; }
  .account-links { text-align: center; margin-top: 20px; font-size: 14px; }
  .account-links a { color: #0b5cff; text-decoration: none; }
  .account-links a:hover { text-decoration: underline; }
</style>

