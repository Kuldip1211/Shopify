<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

<section class="customer-login-section" style="font-family:'Poppins', sans-serif; padding:60px 0; background-color:#fafafa;">
  <div class="container" style="max-width:600px; margin:auto; background:#fff; padding:40px; border-radius:12px; box-shadow:0 0 15px rgba(0,0,0,0.05);">

    <h2 style="text-align:center; margin-bottom:25px; font-weight:600;">Login to Your Account</h2>

    {% form 'customer_login' %}
      {{ form.errors | default_errors }}

      <label>Email</label>
      <input type="email" name="customer[email]" required style="width:100%; padding:12px; margin:10px 0; border:1px solid #ddd; border-radius:6px;">

      <label>Password</label>
      <input type="password" name="customer[password]" required style="width:100%; padding:12px; margin:10px 0; border:1px solid #ddd; border-radius:6px;">

      <button type="submit" style="width:100%; padding:12px; background:#111; color:#fff; border:none; border-radius:6px; margin-top:10px; font-weight:500;">Sign In</button>

      <div style="text-align:center; margin-top:20px;">
        <a href="{{ routes.account_register_url }}" style="color:#007acc; text-decoration:none;">Create Account</a> |
        <a href="#recover" style="color:#007acc; text-decoration:none;">Forgot Password?</a>
      </div>
    {% endform %}

    <div id="recover" style="margin-top:40px;">
      <h3>Recover Password</h3>
      {% form 'recover_customer_password' %}
        {{ form.errors | default_errors }}
        <label>Email</label>
        <input type="email" name="email" required style="width:100%; padding:12px; margin:10px 0; border:1px solid #ddd; border-radius:6px;">
        <button type="submit" style="width:100%; padding:12px; background:#007acc; color:#fff; border:none; border-radius:6px;">Send Reset Link</button>
      {% endform %}
    </div>

  </div>
</section>
