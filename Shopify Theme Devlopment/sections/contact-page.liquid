<!-- üìÑ sections/contact-page.liquid -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<section 
  class="contact-page-section"
  style="
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    font-family: 'Poppins', sans-serif;
    padding: {{ section.settings.section_padding }}px 0;
  "
>
  <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
    
    <!-- üè∑Ô∏è Header -->
    <div class="contact-header" style="text-align: center; margin-bottom: 50px;">
      <h2 style="font-size: 2.5rem; font-weight: 700; color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h2>
      <p style="font-size: 1rem; color: {{ section.settings.subtext_color }}; margin-top: 10px;">
        {{ section.settings.subtext }}
      </p>
    </div>

    <!-- üí¨ Contact Content -->
    <div class="contact-content" style="
      display: grid; 
      grid-template-columns: 1fr 1fr; 
      gap: 40px;
      align-items: start;
    ">

      <!-- üìß Contact Form -->
      <div class="contact-form" style="
        background-color: {{ section.settings.form_bg }};
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      ">
        <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form" style="display: flex; flex-direction: column; gap: 20px;">
          <input type="hidden" name="form_type" value="contact" />
          <input type="hidden" name="utf8" value="‚úì" />

          <div>
            <label for="ContactFormName" style="font-weight: 500;">Name</label>
            <input type="text" id="ContactFormName" name="contact[name]" placeholder="Your Name" required 
              style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem;">
          </div>

          <div>
            <label for="ContactFormEmail" style="font-weight: 500;">Email</label>
            <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="you@example.com" required
              style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem;">
          </div>

          <div>
            <label for="ContactFormMessage" style="font-weight: 500;">Message</label>
            <textarea id="ContactFormMessage" name="contact[body]" rows="5" placeholder="Write your message..." required
              style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; resize: none;"></textarea>
          </div>

          <button type="submit" 
            style="
              background-color: {{ section.settings.button_bg }};
              color: {{ section.settings.button_color }};
              padding: 14px;
              border: none;
              border-radius: 8px;
              font-size: 1rem;
              cursor: pointer;
              font-weight: 600;
              transition: 0.3s ease;
            "
            onmouseover="this.style.backgroundColor='{{ section.settings.button_hover_bg }}'"
            onmouseout="this.style.backgroundColor='{{ section.settings.button_bg }}'"
          >
            {{ section.settings.button_text }}
          </button>
        </form>
      </div>

      <!-- üó∫Ô∏è Map & Contact Info -->
      <div class="contact-info">
        <div style="margin-bottom: 25px;">
          <iframe 
            src="{{ section.settings.map_embed_url }}"
            width="100%" height="300" style="border:0; border-radius: 12px;"
            allowfullscreen="" loading="lazy">
          </iframe>
        </div>

        <div style="line-height: 1.8;">
          <p><strong>üìç Address:</strong> {{ section.settings.address }}</p>
          <p><strong>üìû Phone:</strong> <a href="tel:{{ section.settings.phone }}" style="color: {{ section.settings.link_color }};">{{ section.settings.phone }}</a></p>
          <p><strong>‚úâÔ∏è Email:</strong> <a href="mailto:{{ section.settings.email }}" style="color: {{ section.settings.link_color }};">{{ section.settings.email }}</a></p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
@media (max-width: 768px) {
  .contact-content {
    grid-template-columns: 1fr !important;
  }
}
</style>

{% schema %}
{
  "name": "Contact Page",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Get in Touch" },
    { "type": "text", "id": "subtext", "label": "Subtext", "default": "We‚Äôd love to hear from you! Please fill out the form below." },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#ffffff" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#333333" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#111111" },
    { "type": "color", "id": "subtext_color", "label": "Subtext Color", "default": "#555555" },
    { "type": "color", "id": "form_bg", "label": "Form Background", "default": "#f8f9fa" },
    { "type": "text", "id": "map_embed_url", "label": "Google Map Embed URL", "default": "https://www.google.com/maps/embed?pb=!1m18..." },
    { "type": "text", "id": "address", "label": "Address", "default": "123 Garden Street, Ahmedabad, India" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "+91 98765 43210" },
    { "type": "text", "id": "email", "label": "Email", "default": "support@yourstore.com" },
    { "type": "color", "id": "link_color", "label": "Link Color", "default": "#007bff" },
    { "type": "color", "id": "button_bg", "label": "Button Background", "default": "#28a745" },
    { "type": "color", "id": "button_hover_bg", "label": "Button Hover Background", "default": "#218838" },
    { "type": "color", "id": "button_color", "label": "Button Text Color", "default": "#ffffff" },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Send Message" },
    { "type": "range", "id": "section_padding", "label": "Section Padding (px)", "min": 40, "max": 120, "step": 5, "default": 80 }
  ],
  "presets": [
    { "name": "Contact Page" }
  ]
}
{% endschema %}
