<!-- üìÑ sections/about-us.liquid -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<section class="about-us-section" style="background-color: {{ section.settings.bg_color }}; padding: 70px 0; font-family: 'Poppins', sans-serif;">
  <div class="container" style="display: flex; flex-wrap: wrap; align-items: center; justify-content: center; gap: 40px;">

    <!-- üñºÔ∏è Left Side - Image Collage -->
    <div class="about-collage">
      {% for block in section.blocks %}
        {% if block.settings.gallery_image %}
          <div class="collage-item collage-item-{{ forloop.index }}">
            <img src="{{ block.settings.gallery_image | image_url: width: 600 }}" alt="About image {{ forloop.index }}">
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- üßæ Right Side - About Us Content -->
    <div class="about-content" style="flex: 1 1 40%; color: {{ section.settings.text_color }};">
      <h2 style="font-size: 2.3rem; font-weight: 700; margin-bottom: 20px; color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h2>
      <p style="font-size: 1rem; line-height: 1.7; margin-bottom: 25px;">
        {{ section.settings.description }}
      </p>

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" style="display: inline-block; padding: 12px 28px; border-radius: 8px; background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}; font-weight: 600; text-decoration: none; transition: background 0.3s;">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

  </div>

  <!-- ‚ú® CSS Styling -->
  <style>
    /* üñºÔ∏è Collage Layout */
    .about-collage {
      flex: 1 1 50%;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(3, 130px);
      gap: 10px;
      position: relative;
      max-width: 520px;
    }

    .about-collage img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 12px;
      transition: transform 0.4s ease;
    }

    .about-collage img:hover {
      transform: scale(1.08);
    }

    /* üìê Fixed Grid Arrangement (No Overlap) */
    .collage-item-1 { grid-column: 1 / 2; grid-row: 1 / 3; }
    .collage-item-2 { grid-column: 2 / 3; grid-row: 1 / 2; }
    .collage-item-3 { grid-column: 3 / 4; grid-row: 1 / 3; }
    .collage-item-4 { grid-column: 2 / 4; grid-row: 3 / 4; }
    .collage-item-5 { grid-column: 1 / 2; grid-row: 3 / 4; }

    /* Responsive Layout */
    @media (max-width: 900px) {
      .about-us-section .container {
        flex-direction: column-reverse;
        text-align: center;
      }

      .about-collage {
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(3, 120px);
        max-width: 100%;
      }

      .collage-item {
        grid-column: auto !important;
        grid-row: auto !important;
      }

      .about-content {
        margin-top: 30px;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "About Us (Image Collage)",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Our Journey"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "At Shiv Gardening, we believe in nurturing nature‚Äôs beauty. From lush plants to organic gardening essentials, our journey is rooted in sustainability, growth, and love for the environment. We take pride in delivering the freshness and care that your garden deserves."
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#444444"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#2E7D32"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Collage Image",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "gallery_image",
          "label": "Upload Collage Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us with Image Collage",
      "category": "About"
    }
  ]
}
{% endschema %}