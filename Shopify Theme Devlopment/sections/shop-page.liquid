<!-- ‚úÖ External CSS -->
{{ 'shop_page-shop.css' | asset_url | stylesheet_tag }}

<section 
  class="shop_page-section" 
  style="background-color: {{ section.settings.bg_color }}; font-family: 'Poppins', sans-serif; padding: {{ section.settings.section_padding }}px 0;"
>
  <div class="shop_page-container" style="max-width: 1300px; margin: 0 auto; padding: 0 20px;">
    
    <!-- üè∑Ô∏è Header -->
    <div class="shop_page-header" style="text-align: {{ section.settings.text_alignment }}; margin-bottom: 50px;">
      <h2 class="shop_page-title" style="color: {{ section.settings.heading_color }};">{{ section.settings.heading_text }}</h2>
      <p class="shop_page-subtitle" style="color: {{ section.settings.subheading_color }};">{{ section.settings.subheading_text }}</p>
    </div>

    <!-- üß© Filters -->
    <div class="shop_page-filters">
      <input type="text" id="shop_page-searchInput" placeholder="üîç Search products...">
      <select id="shop_page-categoryFilter">
        <option value="all">All Categories</option>
        {% for collection in collections %}
          <option value="{{ collection.handle }}">{{ collection.title }}</option>
        {% endfor %}
      </select>
    </div>

    <!-- üõçÔ∏è Product Grid -->
    <div id="shop_page-productGrid" class="shop_page-product-grid">
      {% for product in collections.all.products %}
        <div 
          class="shop_page-product-card" 
          data-category="{{ product.collections.first.handle }}"
          data-price="{{ product.price | divided_by: 100 }}"
          data-title="{{ product.title | downcase }}"
        >
          <!-- üñºÔ∏è Product Image -->
          <div class="shop_page-image-wrapper">
            <a href="{{ product.url }}">
              <img 
                src="{{ product.featured_image | image_url: width: 600, height: 600 }}" 
                alt="{{ product.title }}" 
                width="600" 
                height="600" 
                loading="lazy"
              >
            </a>
          </div>

          <!-- üßæ Product Info -->
          <div class="shop_page-product-info">
            <h3>{{ product.title }}</h3>
            <p class="shop_page-vendor">üë®‚Äçüíº Vendor: {{ product.vendor }}</p>
            <p class="shop_page-category">üì¶ Category: {{ product.type }}</p>

            {% if product.tags.size > 0 %}
              <p class="shop_page-tags">üè∑Ô∏è Tags: 
                {% for tag in product.tags %}
                  <span class="shop_page-tag">{{ tag }}</span>{% unless forloop.last %}, {% endunless %}
                {% endfor %}
              </p>
            {% endif %}

            <p class="shop_page-price">üí∞ {{ product.price | money }}</p>

            {% if product.description != blank %}
              <p class="shop_page-desc">{{ product.description | strip_html | truncate: 100 }}</p>
            {% endif %}

            <!-- üß© Variants -->
            {% if product.has_only_default_variant == false %}
              <div class="shop_page-variants">
                {% for option in product.options_with_values %}
                  <p><strong>{{ option.name }}:</strong> 
                    {% for value in option.values %}
                      <span class="shop_page-variant">{{ value }}</span>
                    {% endfor %}
                  </p>
                {% endfor %}
              </div>
            {% endif %}

            <!-- üõí Buttons -->
            <div class="shop_page-button-group">
              <form method="post" action="{{ routes.cart_add_url }}" class="shop_page-add-to-cart-form" data-product-id="{{ product.id }}">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="shop_page-add-to-cart-btn">üõí Add to Cart</button>
              </form>
              <a href="{{ product.url }}" class="shop_page-view-btn">View Details</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div id="shop_page-cart-toast" class="shop_page-cart-toast">‚úÖ Product added to cart</div>

  </div>
</section>

<!-- ‚úÖ External JS -->
<script src="{{ 'shop_page-shop.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Shop Page",
  "settings": [
    { "type": "text", "id": "heading_text", "label": "Heading Text", "default": "Our Products" },
    { "type": "text", "id": "subheading_text", "label": "Subheading Text", "default": "Browse our wide range of products." },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#f9f9f9" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#222222" },
    { "type": "color", "id": "subheading_color", "label": "Subheading Color", "default": "#666666" },
    { "type": "range", "id": "section_padding", "label": "Section Padding (px)", "default": 60, "min": 20, "max": 150, "step": 5 },
    { "type": "select", "id": "text_alignment", "label": "Text Alignment", "default": "center", "options": [
      { "value": "left", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "right", "label": "Right" }
    ]}
  ],
  "presets": [{ "name": "Shop Page" }]
}
{% endschema %}
