<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

<section style="font-family:'Poppins', sans-serif; padding:60px 0;">
  <div class="container" style="max-width:900px; margin:auto;">
    <h2 style="font-weight:600;">Welcome, {{ customer.first_name }} ðŸ‘‹</h2>

    <p>Email: {{ customer.email }}</p>

    <div style="margin-top:20px;">
      <a href="{{ routes.account_addresses_url }}" style="color:#007acc;">View Addresses</a> |
      <a href="{{ routes.account_logout_url }}" style="color:red;">Logout</a>
    </div>

    <h3 style="margin-top:40px;">Your Orders</h3>
    {% if customer.orders.size > 0 %}
      <table style="width:100%; border-collapse:collapse; margin-top:10px;">
        <tr style="background:#f2f2f2;">
          <th style="padding:10px;">Order</th>
          <th style="padding:10px;">Date</th>
          <th style="padding:10px;">Total</th>
          <th style="padding:10px;">Status</th>
        </tr>
        {% for order in customer.orders %}
          <tr style="border-bottom:1px solid #eee;">
            <td style="padding:10px;"><a href="{{ order.customer_url }}">#{{ order.name }}</a></td>
            <td style="padding:10px;">{{ order.created_at | date: "%b %d, %Y" }}</td>
            <td style="padding:10px;">{{ order.total_price | money }}</td>
            <td style="padding:10px;">{{ order.fulfillment_status | default: "Pending" }}</td>
          </tr>
        {% endfor %}
      </table>
    {% else %}
      <p>You have no orders yet.</p>
    {% endif %}
  </div>
</section>
